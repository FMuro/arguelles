% Settings
\useinnertheme{Arguello}
\useoutertheme{Arguello}
\usecolortheme{Arguello}
\usefonttheme{Arguello}

% Hyperlink colors
\hypersetup{
    colorlinks,
    citecolor=cobalt,
	linkcolor=.,
	anchorcolor=.,
	citecolor=cobalt,
	filecolor=.,
	menucolor=.,
	runcolor=.,
	urlcolor=.
}

% Enumerate text size
\setbeamertemplate{itemize/enumerate body begin}{\normalsize}
\setbeamertemplate{itemize/enumerate subbody begin}{\small}
\setbeamertemplate{itemize/enumerate subsubbody begin}{\footnotesize}

% Enumerate label style
\setbeamertemplate{enumerate subitem}{\alph{enumii})}
\setbeamertemplate{enumerate subsubitem}{(\roman{enumiii})}

% TikZ
\usetikzlibrary{calc}

\definecolor{cultured}{HTML}{f5f5f5}
\definecolor{sumi}{HTML}{27221f}
\definecolor{corsa}{HTML}{d40000}
\definecolor{fern}{HTML}{4f7942}
\definecolor{cobalt}{HTML}{0047ab}

\AtBeginEnvironment{proof}{\let\@addpunct\@gobble}
